{
  "expo": {
    "name": "JMLabs",
    "slug": "cs-370-react-native-starter-ljm234",
    "scheme": "jmlabs",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "splash": {
      "image": "./assets/icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#020817"
    },
    "ios": {
      "bundleIdentifier": "com.jmlabs.app",
      "supportsTablet": true,
      "infoPlist": {
        "NSMicrophoneUsageDescription": "We use your microphone to capture realtime clinical audio for case documentation."
      }
    },
    "android": {
      "package": "com.jmlabs.app",
      "adaptiveIcon": {
        "foregroundImage": "./assets/icon.png",
        "backgroundColor": "#020817"
      },
      "permissions": [
        "RECORD_AUDIO"
      ]
    },
    "web": {
      "bundler": "metro"
    },
    "plugins": [
      "expo-router"
    ]
  }
}
